require "rediary"


name = nil
word = nil
id = nil

if 2 <= ARGV.size
  name = ARGV[0]
  if ARGV[1] =~ /^[0-9]+$/
    id = ARGV[1]
  else
    word = ARGV[1]
  end
else
  puts "Usage:"
  puts "ruby rediary name (word or identifier)"
  exit
end


if id
  puts ReDiary.new(name)[id]
else
  puts ReDiary.new(name).search(word)
end
